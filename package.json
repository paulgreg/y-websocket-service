{
  "name": "@y/websocket-service",
  "version": "0.1.1",
  "description": "Backend for y-websocket",
  "type": "module",
  "sideEffects": false,
  "main": "./src/server.js",
  "scripts": {
    "dev": "HOST=127.0.0.1 PORT=6010 YPERSISTENCE=./data YBACKUP=./backup node .",
    "start": "NODE_ENV=production node .",
    "dist": "rm -rf dist && rollup -c && tsc",
    "lint": "standard && tsc",
    "test": "npm run lint",
    "preversion": "npm run lint && npm run dist && test -e dist/src/server.d.ts && test -e dist/server.cjs"
  },
  "bin": {
    "y-websocket-server": "src/server.js",
    "y-websocket": "src/server.js"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./utils": {
      "import": "./src/utils.js",
      "require": "./dist/utils.cjs",
      "types": "./dist/src/utils.d.ts",
      "default": "./src/utils.js"
    },
    "./callback": {
      "import": "./src/callback.js",
      "require": "./dist/callback.cjs",
      "types": "./dist/src/callback.d.ts",
      "default": "./src/callback.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjs/y-websocket-server.git"
  },
  "keywords": [
    "Yjs"
  ],
  "author": "Kevin Jahns <kevin.jahns@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yjs/y-websocket-server/issues"
  },
  "homepage": "https://github.com/yjs/y-websocket-server#readme",
  "standard": {
    "ignore": [
      "/dist",
      "/node_modules"
    ]
  },
  "dependencies": {
    "lib0": "^0.2.114",
    "y-protocols": "^1.0.6"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "rollup": "^4.50.0",
    "standard": "^17.1.2",
    "typescript": "^5.9.2",
    "yjs": "^13.6.27"
  },
  "peerDependencies": {
    "yjs": "^13.5.6"
  },
  "optionalDependencies": {
    "ws": "^6.2.3",
    "y-leveldb": "^0.2.0"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}